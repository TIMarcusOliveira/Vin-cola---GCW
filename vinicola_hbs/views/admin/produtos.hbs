<div class="produtos-admin-container">
  <h1>Editar Produtos</h1>
  <form method="POST" action="/admin/produtos">
    {{#each conteudo}}
      <fieldset>
        <legend>Produto ID {{this.id}}</legend>
        <label>Título</label><br>
        <input type="text" name="{{this.id}}[titulo]" value="{{this.titulo}}"><br>
        <label>Descrição</label><br>
        <textarea name="{{this.id}}[descricao]" class="descricao">{{this.descricao}}</textarea><br>
        <label>Preço</label><br>
        <input type="text" name="{{this.id}}[preco]" value="{{this.preco}}"><br>
      </fieldset>
    {{/each}}
    <button type="submit">Salvar</button>
  </form>
</div>